    <!-- JavaScript for Enhanced UX -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const totalQuestions = <?= $view->totalQuestions ?>;
            const progressBar = document.getElementById('progressBar');
            const progressPercentage = document.getElementById('progressPercentage');
            const progressText = document.getElementById('progressText');
            const answeredCountElement = document.getElementById('answeredCount');
            const questionDots = document.querySelectorAll('.question-dot');
            const questions = document.querySelectorAll('.survey-question');
            const submitBtn = document.getElementById('submitBtn');
            let currentQuestion = 1;
            let answeredQuestions = new Set();

            // Initialize first question
            updateActiveQuestion(1);

            // Function to update progress
            function updateProgress() {
                // Count answered questions
                answeredQuestions.clear();

                questions.forEach((question, index) => {
                    const questionId = index + 1;
                    const radios = question.querySelectorAll('input[type="radio"]:checked');
                    const checkboxes = question.querySelectorAll('input[type="checkbox"]:checked');
                    const questionBadge = question.querySelector('.question-badge');

                    if (radios.length > 0 || checkboxes.length > 0) {
                        answeredQuestions.add(questionId);
                        question.classList.add('answered');
                        question.classList.remove('unanswered');
                        if (questionBadge) {
                            questionBadge.textContent = 'Answered';
                            questionBadge.className = 'badge bg-success question-badge';
                        }
                        questionDots[index].classList.add('answered-dot');
                        questionDots[index].classList.remove('unanswered-dot');
                    } else {
                        question.classList.add('unanswered');
                        question.classList.remove('answered');
                        if (questionBadge) {
                            questionBadge.textContent = 'Not answered';
                            questionBadge.className = 'badge bg-secondary question-badge';
                        }
                        questionDots[index].classList.add('unanswered-dot');
                        questionDots[index].classList.remove('answered-dot');
                    }
                });

                const answeredCount = answeredQuestions.size;
                const percentage = Math.round((answeredCount / totalQuestions) * 100);

                // Update progress bar
                progressBar.style.width = percentage + '%';
                progressBar.setAttribute('aria-valuenow', percentage);
                progressPercentage.textContent = percentage + '%';
                answeredCountElement.textContent = answeredCount;

                // Update progress bar color
                if (percentage === 100) {
                    progressBar.classList.remove('bg-danger', 'bg-warning');
                    progressBar.classList.add('bg-success');
                    submitBtn.innerHTML = '<i class="bi bi-check-circle-fill"></i> Ready to Submit!';
                    submitBtn.classList.remove('btn-success');
                    submitBtn.classList.add('btn-success', 'pulse-animation');
                } else if (percentage >= 70) {
                    progressBar.classList.remove('bg-danger', 'bg-success');
                    progressBar.classList.add('bg-warning');
                    submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Complete Survey';
                    submitBtn.classList.remove('pulse-animation');
                } else {
                    progressBar.classList.remove('bg-warning', 'bg-success');
                    progressBar.classList.add('bg-danger');
                    submitBtn.innerHTML = '<i class="bi bi-check-circle"></i> Complete Survey';
                    submitBtn.classList.remove('pulse-animation');
                }

                // Find current unanswered question
                for (let i = 0; i < questions.length; i++) {
                    if (!answeredQuestions.has(i + 1)) {
                        currentQuestion = i + 1;
                        updateActiveQuestion(currentQuestion);
                        break;
                    }
                }

                // If all answered, make last question active
                if (answeredCount === totalQuestions) {
                    currentQuestion = totalQuestions;
                    updateActiveQuestion(currentQuestion);
                }
            }

            // Function to update active question
            function updateActiveQuestion(questionNum) {
                // Remove active class from all questions and dots
                questions.forEach(q => {
                    q.classList.remove('active-question');
                });
                questionDots.forEach(dot => {
                    dot.classList.remove('active-dot');
                });

                // Add active class to current question and dot
                if (questionNum >= 1 && questionNum <= totalQuestions) {
                    const questionIndex = questionNum - 1;
                    questions[questionIndex].classList.add('active-question');
                    questionDots[questionIndex].classList.add('active-dot');

                    // Scroll to active question (smoothly)
                    setTimeout(() => {
                        questions[questionIndex].scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }, 100);
                }
            }

            // Add event listeners to all inputs
            document.querySelectorAll('input[type="radio"], input[type="checkbox"]').forEach(input => {
                input.addEventListener('change', function() {
                    updateProgress();
                    // Auto-advance to next question on radio selection
                    if (this.type === 'radio' && currentQuestion < totalQuestions) {
                        setTimeout(() => {
                            updateActiveQuestion(currentQuestion + 1);
                        }, 500);
                    }
                });
            });

            // Add click events to question dots for navigation
            questionDots.forEach((dot, index) => {
                dot.addEventListener('click', function() {
                    currentQuestion = index + 1;
                    updateActiveQuestion(currentQuestion);
                });
            });

            // Next/Previous buttons for mobile
            document.querySelectorAll('.next-question').forEach(btn => {
                btn.addEventListener('click', function() {
                    const questionDiv = this.closest('.survey-question');
                    const questionId = parseInt(questionDiv.dataset.questionId);
                    if (questionId < totalQuestions) {
                        currentQuestion = questionId + 1;
                        updateActiveQuestion(currentQuestion);
                    }
                });
            });

            document.querySelectorAll('.prev-question').forEach(btn => {
                btn.addEventListener('click', function() {
                    const questionDiv = this.closest('.survey-question');
                    const questionId = parseInt(questionDiv.dataset.questionId);
                    if (questionId > 1) {
                        currentQuestion = questionId - 1;
                        updateActiveQuestion(currentQuestion);
                    }
                });
            });

            // Scroll to top button
            document.getElementById('scrollToTopBtn').addEventListener('click', function() {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowDown' || e.key === 'ArrowRight') {
                    e.preventDefault();
                    currentQuestion = Math.min(currentQuestion + 1, totalQuestions);
                    updateActiveQuestion(currentQuestion);
                } else if (e.key === 'ArrowUp' || e.key === 'ArrowLeft') {
                    e.preventDefault();
                    currentQuestion = Math.max(currentQuestion - 1, 1);
                    updateActiveQuestion(currentQuestion);
                } else if (e.key === 'Home') {
                    e.preventDefault();
                    currentQuestion = 1;
                    updateActiveQuestion(currentQuestion);
                } else if (e.key === 'End') {
                    e.preventDefault();
                    currentQuestion = totalQuestions;
                    updateActiveQuestion(currentQuestion);
                }
            });

            // Form validation
            document.getElementById('surveyForm').addEventListener('submit', function(e) {
                if (answeredQuestions.size < totalQuestions) {
                    e.preventDefault();
                    const unanswered = totalQuestions - answeredQuestions.size;
                    alert(`Please answer all questions before submitting.\n\nYou have ${unanswered} unanswered question${unanswered > 1 ? 's' : ''}.`);

                    // Scroll to first unanswered question
                    for (let i = 0; i < questions.length; i++) {
                        if (!answeredQuestions.has(i + 1)) {
                            questions[i].scrollIntoView({ behavior: 'smooth', block: 'center' });
                            break;
                        }
                    }
                } else {
                    // Show loading state
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Submitting...';
                    submitBtn.disabled = true;
                }
            });

            // Initial progress update
            updateProgress();
        });
    </script>

